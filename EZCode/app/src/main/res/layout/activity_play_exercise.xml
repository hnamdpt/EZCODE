<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/30"
            android:textSize="50sp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:textColor="#fff"
            android:id="@+id/tv_countQuestion"
            />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="114dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/ex1"
            android:padding="10dp"
            android:textAlignment="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1"
                android:id="@+id/tv_title_question"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wating..."
                android:textStyle="bold"
                android:id="@+id/tv_question"
                />
        </LinearLayout>

        <TextView
            android:background="@drawable/ex2"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:layout_marginTop="1px"
            android:text="Wating..."
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/tv_answerA"
            />

        <TextView
            android:background="@drawable/ex3"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:layout_marginTop="1px"
            android:text="Wating..."
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/tv_answerB"
            ></TextView>

        <TextView
            android:background="@drawable/ex3"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:layout_marginTop="1px"
            android:text="Wating..."
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/tv_answerC"
          />

        <TextView
            android:background="@drawable/ex4"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:layout_marginTop="1px"
            android:text="Wating..."
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/tv_answerD"
          />
    </LinearLayout>


</RelativeLayout>